<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60">
    <!-- Properties for reuse -->
    <Properties>
        <!-- Change paths as needed -->
        <!-- Default to target/logs; allow override via -DLOG_DIR=/path -->
        <Property name="logDir">${sys:LOG_DIR:-target/logs}</Property>
        <Property name="logFileName">application.log</Property>
        <!-- Pattern: date time | level | thread | logger | message -->
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %logger{36} - %msg%throwable%n</Property>
    </Properties>
 
    <Appenders>
        <!-- RollingFile with timestamped file names -->
        <RollingFile name="RollingFile"
                     fileName="${logDir}/${logFileName}"
                     filePattern="${logDir}/archive/%d{yyyy-MM}/app-%d{yyyy-MM-dd-HH}.%i.log.gz"
                     bufferedIo="true"
                     immediateFlush="false">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <!-- Roll hourly -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Also roll when file reaches 100 MB -->
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <!-- Keep last 30 days or 1000 files, whichever comes first -->
            <DefaultRolloverStrategy max="1000">
                <Delete basePath="${logDir}/archive" maxDepth="2">
                    <IfFileName glob="*/app-*.log.gz"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
 
        <!-- Console for local debugging -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
    </Appenders>
 
    <!-- Use Async Loggers -->
    <Loggers>
        <!-- Example: more verbose for your package -->
        <AsyncLogger name="com.cro" level="info" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
        </AsyncLogger>
 
        <!-- Root logger -->
        <AsyncRoot level="info">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="Console"/>
        </AsyncRoot>
    </Loggers>
</Configuration>